ScreenManager:
    MainWindow:
        name: "main"
        # altura: altura
        # gsd: gsd
        # espaciamiento: espaciamiento
        tarifa: tarifa
        # tarifa_text: tarifa_text
        # zona_plana: zona_plana
        # cerros: cerros
        # rend_estd: rend_estd
        # rend_redc: rend_redc
        # peso: peso

        GridLayout:
            cols:1
            # size: root.width-50, root.height-50
            # pos: 25, 25
            GridLayout:
                id: Conf_Alt
                cols:3
                size_hint:(.1,None)
                height:(root.height)*0.0625*2
                BoxLayout:
                    orientation: "vertical"
                    Label
                        text:"Altura"
                    TextInput
                        id: altura
                        multiline: False
                        cursor_width: 3
                BoxLayout:
                    orientation: "vertical"
                    Label
                        text:"GSD"
                    TextInput
                        id: gsd
                        multiline:False
                        readonly: True
                BoxLayout:
                    orientation: "vertical"
                    Label
                        text:"Espaciamiento"
                    TextInput
                        id: espaciamiento
                        multiline:False
                        readonly: True
            BoxLayout:
                id: Conf_Tarifa
                orientation: "horizontal"
                size_hint:(.1,None)
                height:(root.height)*0.0625*1
                Label
                    text:"Tarifa x día"
                TextInput
                    id: tarifa
                    multiline:False
            BoxLayout:
                id: Conf_Calcular
                orientation: "vertical"
                size_hint:(.1,None)
                height:(root.height)*0.0625*11
                BoxLayout:
                    id: Geografia
                    orientation: "vertical"
                    Label:
                        text:"Geografía ha/día"
                    GridLayout:
                        cols:2
                        Label:
                            text:"% Zona Plana"
                        Label:
                            text:"% Cerros"
                        TextInput:
                            id: zona_plana
                            multiline:False
                        TextInput:
                            id: cerros
                            multiline:False
                            readonly: True
                BoxLayout:
                    id: Rendimiento_alt
                    orientation: "vertical"
                    Label:
                        text:"Rendimiento x Altitud"
                    GridLayout:
                        cols:2
                        Label:
                            text:"% Hasta 3000 msnm"
                        Label:
                            text:"% Sobre 3000 msnm"
                        TextInput:
                            id: rend_estd
                            multiline:False
                        TextInput:
                            id: rend_redc
                            multiline:False
                            readonly: True
                BoxLayout:
                    id: Rendimiento_peso
                    orientation: "vertical"
                    Label:
                        text:"Rendimiento x Peso"
                    Label:
                        text:"2Kg = 100"
                    Label:
                        text:"4Kg = 50"
                    Label:
                        text:"6Kg = 25"
                    TextInput:
                        id:peso
                        multiline:False
            Button:
                size_hint:(.1,None)
                height:(root.height)*0.0625*2
                text : "Calcular"
                on_press:
                    # rend_tarifa.text = tarifa.text
                    root.current = 'second'
                # on_release:
                #     app.root.current = "second"
                #     precio_tarifa.text=tarifa.text
                #     root.manager.transition.direction = "left"

    SecondWindow:
        name: "second"
        # rend_tarifa:rend_tarifa
        # semanas:semanas
        # hectareas_min:hectareas_min
        # hectareas_max:hectareas_max
        # km_lineales:km_lineales
        # dias:dias
        # costo:costo
        # costo_ha:costo_ha

        GridLayout:
            cols:1
            BoxLayout:
                orientation: "horizontal"
                size_hint:(.1,None)
                height:(root.height)*0.0625*1
                Label:
                    text:"Tarifa"
                TextInput:
                    id: rend_tarifa
                    multiline:False
                    readonly: True
            BoxLayout:
                orientation: "horizontal"
                size_hint:(.1,None)
                height:(root.height)*0.0625*1
                Label:
                    text:"Rendimiento día/ha"
                TextInput:
                    multiline:False
                    readonly: True

            BoxLayout:
                size_hint:(.1,None)
                height:(root.height)*0.0625*1
                Label:
                    text:"Semanas de Plazo"
                TextInput:
                    id: semanas
                    multiline:False
                    readonly: True
            BoxLayout:
                orientation: "vertical"
                size_hint:(.1,None)
                height:(root.height)*0.0625*2
                Label:
                    text:"Hectareas"
                GridLayout:
                    cols:2
                    TextInput:
                        id: hectareas_min
                        multiline:False
                        readonly: True
                    TextInput:
                        id: hectareas_max
                        multiline:False
                        readonly: True
            BoxLayout:
                size_hint:(.1,None)
                height:(root.height)*0.0625*1
                Label:
                    text:"Km Lineales"
                TextInput:
                    id: km_lineales
                    multiline:False
                    readonly: True
            BoxLayout:
                size_hint:(.1,None)
                height:(root.height)*0.0625*1
                Label:
                    text:"Días"
                TextInput:
                    id: dias
                    multiline:False
                    readonly: True
            BoxLayout:
                size_hint:(.1,None)
                height:(root.height)*0.0625*1
                Label:
                    text:"Costo"
                TextInput:
                    id: costo
                    multiline:False
                    readonly: True
            BoxLayout:
                size_hint:(.1,None)
                height:(root.height)*0.0625*1
                Label:
                    text:"Costo x ha"
                TextInput:
                    id: costo_ha
                    multiline:False
                    readonly: True



            Button:
                text: "Return"
                on_press: root.current = 'main'
                # on_release:
                #     app.root.current = "main"
                #     root.manager.transition.direction = "right"
